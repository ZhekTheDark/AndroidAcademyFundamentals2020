<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:fillViewport="true"
    android:clipToPadding="false"
    tools:context=".MoviesActivity">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/textView_location"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/movie_margin"
        android:layout_marginTop="@dimen/movies_location_top_margin"
        android:layout_marginEnd="@dimen/movie_margin"
        android:drawableEnd="@drawable/baseline_search_24"
        android:drawablePadding="8dp"
        android:fontFamily="@font/roboto"
        android:gravity="center_vertical"
        android:text="@string/warszawa_poland"
        android:textSize="@dimen/movies_text_size"
        app:drawableStartCompat="@drawable/baseline_my_location_24"
        app:drawableTint="@color/tag"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.viewpager2.widget.ViewPager2
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_location" />

    <!--    app:drawableStartCompat="@android:drawable/ic_menu_mylocation"-->

</androidx.constraintlayout.widget.ConstraintLayout>